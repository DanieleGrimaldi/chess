<VBox alignment="CENTER" prefHeight="333.0" prefWidth="368.0" spacing="20.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="chess.client.fx.SignupController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Label fx:id="title_label" text="Chess" textFill="#691067">
      <font>
         <Font name="Comfortaa Regular" size="34.0" />
      </font>
   </Label>
   <Label text="Crea un nuovo account." />
   <MFXTextField fx:id="usernameField" floatingText="Username" prefHeight="8.0" prefWidth="328.0">
      <cursor>
         <Cursor fx:constant="TEXT" />
      </cursor>
   </MFXTextField>
   <MFXPasswordField fx:id="password1Field" floatingText="Password" prefHeight="51.0" prefWidth="386.0">
      <cursor>
         <Cursor fx:constant="TEXT" />
      </cursor>
   </MFXPasswordField>
   <MFXPasswordField fx:id="password2Field1" floatingText="Ripeti password" prefHeight="51.0" prefWidth="386.0">
      <cursor>
         <Cursor fx:constant="TEXT" />
      </cursor>
   </MFXPasswordField>
   <MFXButton fx:id="registerButton" onMouseClicked="#onRegisterButtonClick" text="Registrati">
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor>
   </MFXButton>
   <Label fx:id="loginLabel" onMouseClicked="#onSigninLabelClick" text="Hai giÃ  un account? Accedi." textFill="BLUE" underline="true">
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor>
   </Label>
</VBox>
